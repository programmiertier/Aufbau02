<Window x:Class="Wpf_mit_SQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_mit_SQL"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- Einteilung des Gitters für die Anzeige -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="knpfAlle" Content="alle Personen" Click="knpfAlle_Click" />
        <Button Grid.Row="1" Name="knpfNeu" Content="Neue Person" Click="knpfNeu_Click"/>
        <Button Grid.Row="2" Name="knpfSuche" Content="Suche Person" Click="knpfSuche_Click"/>
        
    </Grid>
</Window>
